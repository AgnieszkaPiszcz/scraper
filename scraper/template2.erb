<!doctype html>
<html lang="pl">
    
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cars</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
        }
    
        .container {
            width: 100%;
        }
    
        .table {
            width: 100%; 
            margin-right: 2%; 
            float: left;
            border: 1px solid #000;
            margin-bottom: 20px;
            page-break-inside: avoid;
            clear: right;
        }
    
        .table img {
            width: 200px;
            height: 150px;
            backgroun15size: cover;
        }
    
        .table table {
            width: 100%;
            border-collapse: collapse;
        }
    
        .table th, .table td {
            border: 1px solid #000;
            padding: 8px;
            font-size: 12px;
        }
    
        .clear {
            clear: both;
        }
    </style>
    </head>
    <body>
    <div class="container">
        <% cars.each_with_index do |car, i| %>
            <div class="table">
                
                <table>
                    <tr>
                        <td colspan=2><img src= <%= car[:image] %> alt="Image 1"></td>
                        <td style="font-weight: bold" > <%= car[:name] %> </td>
                    </tr>
                    <tr>
                        <td> Cena: <%= car[:price] %> zł </td>
                        <td> Rocznik: <%= car[:year] %> </td>
                        <td> Przebieg: <%= car[:mileage] %> </td>
                    </tr>

                    <tr>
                        <td> Skrzynia biegów: <%= car[:gearshift] %> </td>
                        <td> Silnik: <%= car[:engine] %> </td>
                        <td> Lokalizacja: <%= car[:location] %> </td>
                    </tr>
                    <tr>
                        <td colspan=3> <%= car[:addtional_info] %> </td>
                    </tr>

                </table>
            </div>
        <% end %>
    </div>
    </body>
</html>
