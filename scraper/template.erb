<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cars</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>

  <body>
     <div class="container">
      <div class="row">
        <% cars.each do |car| %>
        <div class="col-md-6 pt-3 text-center" style="page-break-inside: avoid">
          <div class="card h-auto p-1">
            <div class="card-header fw-bold"><%= car[:name] %></div>

            <img class="card-img-top" src=<%= car[:image] %>>
            <div class="py-1 my-1 card-body h-auto">
              <p style="font-size: 12px" class="py-0 my-0 lh-1"><%= car[:addtional_info] %></p>
            </div>
            <ul class="list-group list-group-flush h-auto p-0">
              <li class="list-group-item my-1 py-1"> <p style="font-size: 12px" class="my-0 py-0 lh-1" > Cena: <%= car[:price] %> zł</p> </li>
              <li class="list-group-item my-1 py-1"> <p style="font-size: 12px" class="my-0 py-0 lh-1" > Rocznik: <%= car[:year] %> </p> </li>
              <li class="list-group-item my-1 py-1"> <p style="font-size: 12px" class="my-0 py-0 lh-1" > Przebieg: <%= car[:mileage] %> </p> </li>
              <li class="list-group-item my-1 py-1"> <p style="font-size: 12px" class="my-0 py-0 lh-1" > Skrzynia biegów: <%= car[:gearshift] %> </p></li>
              <li class="list-group-item my-1 py-1"> <p style="font-size: 12px" class="my-0 py-0 lh-1" > Silnik: <%= car[:engine] %> </p> </li>
              <li class="list-group-item my-1 py-1"> <p style="font-size: 12px" class="my-0 py-0 lh-1" > Lokalizacja: <%= car[:location] %> </p> </li>
            </ul>
          </div>
        </div> 
        <% end %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>

</html>

